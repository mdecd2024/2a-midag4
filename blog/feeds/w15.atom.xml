&lt;p&gt;def shoot():
    try:
        # è·å–çƒçš„ä½ç½®
        ball_position = sim.getObjectPosition(Sphere, -1)&lt;/p&gt;
&lt;div class="highlight"&gt;&lt;pre&gt;&lt;span&gt;&lt;/span&gt;&lt;code&gt;    # è®¾ç½®çƒçš„åˆå§‹é€Ÿåº¦ï¼Œä½¿å…¶å…·æœ‰æ‹‹ç‰©çº¿è¿åŠ¨
    throw_force = 90.0
